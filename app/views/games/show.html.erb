<script>
function init() {
  $('a').draggable({
    containment: 'table',
    scroll: false,
    start: function( event, ui) {
      $.ajaxSetup({ cache: false });
      href = this.href;      
    },
    drag: function( event, ui ) {
      xCoord = $('.ui-droppable-hover').data('x-position');
      yCoord = $('.ui-droppable-hover').data('y-position');
    },
    stop: function( event,ui ) {
      if ( yCoord == "7" || yCoord == "0") {
        $('#promotion').modal('toggle');
        console.log('This if statement passed');
      };
        $.ajax({
          type: "PUT",
          url: href,
          data: {
            x_coord: xCoord, 
            y_coord: yCoord
          }
        });
      window.location.reload(true);
    }
  });

  $('tr td').droppable({
    greedy: true
  });
};

$( init );
</script>

